
public class Player{
   private TicTacToe gameBoard;
   private char symbol;
      public Player(TicTacToe gameBoard, char symbol){
      gameBoard = this.gameBoard;
      symbol = this.symbol;
      }
   public void play(){
      int row
      do{
      String contents = StdIn.readLine(); 
      System.out.println("Player"+symbol+ "'s turn.");
      int row = Integer.parseInt(contents);
      System.out.println("Enter row (0-2):"+row);
      int col = Integer.parseInt(contents);
      System.out.println("Enter column (0-2):"+col);
      
       
      }while(gameBoard.makeMove(row,col,symbol)==false);
    
      
      
   
   }
      
